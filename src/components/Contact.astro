---
import { Reveal, RevealHorizontal } from './ui/Reveal';
import Section from './Section.astro';
---

<Section id="contact" className="mb-20">
  <Reveal client:load>
    <div class="bg-card-bg border border-border-subtle rounded p-8 md:p-12 text-center md:text-left md:flex md:items-center md:justify-between">
        <div class="space-y-4">
        <h2 class="text-2xl md:text-3xl font-bold tracking-tight text-text-primary">
            Ready to collaborate?
        </h2>
        <p class="text-text-muted max-w-md">
            I am currently open to new opportunities. Let's discuss how I can contribute to your team.
        </p>
        </div>
        <div class="mt-8 md:mt-0 flex gap-4 justify-center md:justify-start">
            <a href="mailto:hello@albiariza.com" class="inline-flex items-center justify-center px-6 py-3 text-sm font-semibold text-deep-blue bg-accent rounded hover:bg-white transition-colors duration-300">
                Email Me
            </a>
            <a href="https://linkedin.com/in/albi-ariza-syafiq-6630b634a/" target="_blank" class="inline-flex items-center justify-center px-6 py-3 text-sm font-medium text-text-primary border border-border-subtle rounded hover:border-text-primary hover:bg-white/5 transition-colors duration-300">
                LinkedIn
            </a>
        </div>
    </div>
  </Reveal>
</Section>
