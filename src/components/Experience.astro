---
import { Reveal, RevealHorizontal } from './ui/Reveal';
import Section from './Section.astro';

const experiences = [
  {
    role: "Backend Engineer",
    company: "Freelance",
    period: "2024 - Present",
    description: "Architecting custom API solutions and optimizing database performance for diverse client projects. Focusing on scalability and security."
  },
  {
    role: "Computer Science Student",
    company: "University / Self-Taught",
    period: "2022 - 2024",
    description: "Intensive study of algorithms, data structures, and distributed systems. Built foundational knowledge in varied programming paradigms."
  }
];
---

<Section id="experience">
  <div class="space-y-16">
     <div class="space-y-2">
        <Reveal client:load>
            <h2 class="text-2xl font-bold tracking-tight text-text-primary">Journey</h2>
        </Reveal>
        <div class="h-0.5 w-16">
            <RevealHorizontal client:load>
                <div class="h-full w-full bg-accent"></div>
            </RevealHorizontal>
        </div>
    </div>

    <div class="relative border-l border-border-subtle ml-3 space-y-16">
      {experiences.map((exp, index) => (
        <Reveal client:load delay={index * 0.2}>
            <div class="pl-10 relative">
            <span class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-card-bg border border-accent ring-4 ring-deep-blue"></span>
            
            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between mb-2">
                <h3 class="text-xl font-bold text-text-primary hover:text-accent transition-colors duration-300">{exp.role}</h3>
                <span class="text-sm font-mono text-accent-soft">{exp.period}</span>
            </div>
            
            <p class="text-sm font-medium text-text-muted mb-3">{exp.company}</p>
            <p class="text-base text-text-muted leading-relaxed max-w-2xl text-pretty">{exp.description}</p>
            </div>
        </Reveal>
      ))}
    </div>
  </div>
</Section>
