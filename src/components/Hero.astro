---
import { Reveal, RevealHorizontal } from './ui/Reveal';
import Section from './Section.astro';
---

<Section className="flex flex-col justify-center min-h-[90vh] pt-20">
  <div class="space-y-8">
    
    <div class="space-y-4">
      <Reveal client:load delay={0.1}>
         <h2 class="text-sm md:text-base font-mono font-medium text-accent tracking-wide">
          Hi, I am Albi Ariza Syafiq
        </h2>
      </Reveal>
      
      <Reveal client:load delay={0.2}>
        <h1 class="text-5xl md:text-7xl font-bold tracking-tight text-text-primary text-balance leading-tight">
          Backend Engineer &<br />
          Web Developer.
        </h1>
      </Reveal>
    </div>

    <Reveal client:load delay={0.3}>
      <p class="max-w-2xl text-lg md:text-xl text-text-muted leading-relaxed text-balance">
        I design consistent, scalable systems and robust APIs. Focused on logic, structure, and performance using <span class="text-text-primary font-semibold">Node.js</span> and <span class="text-text-primary font-semibold">Go</span>.
      </p>
    </Reveal>

    <Reveal client:load delay={0.4}>
      <div class="pt-6 flex flex-wrap gap-4">
        <a 
          href="#projects" 
          class="inline-flex items-center justify-center px-8 py-3.5 text-sm font-semibold text-deep-blue bg-accent rounded hover:bg-white transition-colors duration-300 shadow-lg shadow-blue-900/10"
        >
          View Projects
        </a>
        <a 
          href="#contact" 
          class="inline-flex items-center justify-center px-8 py-3.5 text-sm font-medium text-text-primary border border-border-subtle rounded hover:border-text-primary hover:bg-white/5 transition-all duration-300"
        >
          Contact Me
        </a>
      </div>
    </Reveal>

  </div>
</Section>
